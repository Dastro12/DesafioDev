@model DesafioDev.Models.CidadeViewModel

<h1 class="text-center">Cadastro de Cidade</h1>

<div class="row">
    <div class="col-md-2">
        <button class="btn btn-primary btn-sm btn-ModalAdicionarCidade">Adicionar</button>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Cidade</th>
            <th scope="col">Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cidade in Model.listacidades)
        {
            <tr>
                <td>@cidade.nome</td>
                <td>@cidade.estado</td>
                <td>
                    <button class="btn btn-success btn-sm" title="Editar"><i class="bi bi-pencil-square"></i></button>
                </td>
            </tr>
        }

    </tbody>
</table>

<partial name="Form" model="@Model"/>