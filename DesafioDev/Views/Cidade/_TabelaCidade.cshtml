@model DesafioDev.Models.CidadeViewModel
@{
    Layout = null;
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Cidade</th>
            <th scope="col">Estado</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.listacidades.Any())
        {
            @foreach (var cidade in Model.listacidades)
            {
                <tr>
                    <td>@cidade.nome</td>
                    <td>@cidade.estado</td>
                    <td>
                        <button class="btn btn-warning btn-sm" title="Editar" onclick="EditarCidade(@cidade.id)"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-danger btn-sm" title="Excluir" onclick="DeletarCidade(@cidade.id)"><i class="bi bi-trash3-fill"></i></button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Nenhuma cidade encontrada</td>
            </tr>
        }

    </tbody>
</table>